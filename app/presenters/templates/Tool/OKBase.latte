{block header_tmpl}
{/block}

{block content}
<div class="pure-u-sm-24-24 main">
    <h1 class="first_item">{_'Kontrola zaměstnanců OKBase'}</h1>
    <table class="pure-table pure-table-bordered">
        <thead>
            <tr>
                <th>{_'Os.č.'}</th>
                <th>{_'Jméno'}</th>
                <th>{_'Příjmení'}</th>
                <th>{_'Email'}</th>
                <th>{_'Tel.'}</th>
                <th>{_'Útvar'}</th>
                <th>{_'Stav'}</th>
                <th>{_'Username'}</th>
        </thead>
        <tbody>
            {foreach $employees as $employee}
                {if !empty($employee->status)}
                <tr>
                    <td>{$employee->osoc}</td>
                    <td>{$employee->jmeno}</td>
                    <td>{$employee->prijmeni}</td>
                    <td>{$employee->email}</td>
                    <td>{$employee->telefon}</td>
                    <td>{$employee->utvar}</td>
                    <td>{$employee->status|noescape}</td>
                    <td>{$employee->username}</td>
                </tr>
                {/if}
            {/foreach}
        </tbody>
    </table>
    
</div>
{/block}
